{
  "name": "shelljs-plugin-help",
  "version": "1.0.3",
  "description": "A help manual plugin for ShellJS",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier --write .",
    "updatedocs": "node ./scripts/generateHelpDocs.js",
    "example": "node ./example",
    "test": "mocha ./tests/*.js",
    "coverage": "nyc --reporter=clover --reporter=lcov npm run test",
    "report-coverage": "npm run coverage && codecov",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "shelljs",
    "help",
    "manual",
    "plugin"
  ],
  "author": "Jessie France (https://github.com/jessiefrance)",
  "license": "MIT",
  "bugs": "https://github.com/JessieFrance/shelljs-plugin-help/issues",
  "homepage": "https://github.com/JessieFrance/shelljs-plugin-help",
  "devDependencies": {
    "chai": "^4.3.4",
    "codecov": "^3.8.2",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.1",
    "shelljs": "^0.8.5"
  },
  "lint-staged": {
    "*.{js,json,md}": "prettier --write"
  },
  "peerDependencies": {
    "shelljs": "^0.8.5"
  },
  "dependencies": {
    "marked": "^4.0.10",
    "marked-terminal": "^4.1.1"
  },
  "engines": {
    "node": ">=12"
  }
}
